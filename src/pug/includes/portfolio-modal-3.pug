// Portfolio item 1 modal popup
#portfolioModal3.portfolio-modal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog
        .modal-content
            .close-modal(data-bs-dismiss='modal')
                img(src='assets/img/close-icon.svg', alt='Close modal')
            .container
                .row.justify-content-center
                    .col-lg-8
                        .modal-body
                            // Project details
                            h2.text-uppercase Troy Grenier
                            p.item-intro.text-muted [Say something special]
                            img.img-fluid.d-block.mx-auto(src='assets/img/portfolio/[RIDER IMAGE].jpg', alt='Troy Grenier')
                            ul.list-inline
                                li
                                    strong Name:
                                    | 'Turbo' Troy Grenier
                                li
                                    strong Age:
                                    | 0
                                li
                                    strong Hometown:
                                    | Abbostford, BC
                                li
                                    strong Stance:
                                    | Regular
                                li
                                    strong Sponsors:
                                    | [RIDER SPONSORS]
                            p Rider Bio TBA.
                            a.btn.btn-dark.btn-social.mx-2(href='https://www.instagram.com/[RIDER NAME]/', aria-label='Troy Grenier Instagram Profile')
                                i.fab.fa-instagram
                            a.btn.btn-dark.btn-social.mx-2(href='', aria-label='Troy Grenier Youtube')
                                i.fab.fa-youtube
